#!/bin/sh -

NORM_PATH="$(dirname "$(readlink -f "$1")")"
export NORM_PATH
# NORM_CRT0_PATH="$NORM_PATH/external/picolibc/crt0.o"
NORM_CRT0_PATH="$NORM_PATH/lib/libc/crt/crt0.o"
export NORM_CRT0_PATH

export PICO_SDK_PATH="$NORM_PATH/external/pico-sdk"
export PICOSDK_PATH="$PICO_SDK_PATH"

export CPATH="$NORM_PATH/include"
CFLAGS="-O3 -nostdinc -fno-builtin -ffreestanding"
CFLAGS="$CFLAGS -I$NORM_PATH/include"
export CFLAGS

LDFLAGS="-nostdlib -nostartfiles"
LDFLAGS="$LDFLAGS -L$NORM_PATH/lib"
export LDFLAGS

C_INCLUDE_PATH="$NORM_PATH/include"
export C_INCLUDE_PATH

LIBRARY_PATH="$NORM_PATH/lib"
export LIBRARY_PATH

